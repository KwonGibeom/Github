<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class table="PRODUCT" name="product.SimpleProduct">

		<id name="id">
			<column name="id" />
		</id>

		<property name="name">
			<column name="name" />
		</property>
		
		<property name="company">
			<column name="company" />
		</property>
		
		<property name="price"  >
	    	<column name="price"></column>
		</property>

	</class>
</hibernate-mapping>